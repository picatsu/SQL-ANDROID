<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="@drawable/walppaper3">

	<TextView
		android:id="@+id/textView"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:textSize="30dp"
		android:gravity="center"
		android:textColor="@color/colorAccent"
		android:text=" My Personal encyclopedia" />

	<TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TableRow >

	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="5dp"
				android:textSize="25dp"
		        android:text="Type :  "/>
	
		    <EditText
		        android:id="@+id/identificateur"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="5dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" /> 
	    </TableRow>
	    <TableRow >

	        <TextView 
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="5dp"
				android:textSize="25dp"
		        android:text="Noms :  "/>
	
		    <EditText

		        android:id="@+id/Mots"
				android:layout_marginTop="10dp"
				android:layout_marginLeft="5dp"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" />
		</TableRow> 
    </TableLayout>

	<Button
		android:id="@+id/creer"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"

		android:layout_marginTop="20dp"
		android:layout_marginLeft="5dp"
		android:shape="oval"
		android:onClick="creerregistre"
		android:text=" ajouter    "
		android:textColor="#FFFFFF"
		android:textSize="30sp"


		android:background="@drawable/buttonshape"
		android:shadowColor="#A8A8A8"
		android:shadowDx="0"
		android:shadowDy="0"
		android:shadowRadius="4"
		 />

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginVertical="@dimen/activity_vertical_margin"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="5dp"
		android:layout_marginBottom="10dp"


		android:textColor="#FFFFFF"
		android:textSize="30sp"


		android:background="@drawable/buttonshape"
		android:shadowColor="#A8A8A8"
		android:shadowDx="0"
		android:shadowDy="0"
		android:shadowRadius="5"


		android:onClick="showliste"
		android:shape="oval"
		android:text=" voir la liste " />

	<TextView
		android:id="@+id/textView2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_marginTop="80dp"
		android:textSize="20dp"
		android:textColor="#FFFFFF"

		android:text="Made By Achraf L." />


</LinearLayout>